            description="COM_FOLIA_TUTEURS_NOM"
            size="40" class="inputbox" default="" required="true" readonly="true"
        />
        <field name="societe" type="text" label="COM_FOLIA_TUTEURS_SOCIETE"
            description="COM_FOLIA_TUTEURS_SOCIETE"
            size="60" class="inputbox" default="" required="true"
        />
        <field name="service" type="text" label="COM_FOLIA_TUTEURS_SERVICE"
            description="COM_FOLIA_TUTEURS_SERVICE"
            size="60" class="inputbox" default="" required="true"
        />

