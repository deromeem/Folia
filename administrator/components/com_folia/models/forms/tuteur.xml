			description="JGLOBAL_FIELD_MODIFIED_LABEL"
			size="22"  class="readonly" default="" readonly="true"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc"
		/>
		<field
			name="modified_by" type="user" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
